class Star_pattern2
{
	public static void main(String[] args) 
	{
		int n=5;
		
		for (int i=1; i<=n; i++ )
		{												   
			for (int j=1 ; j<n*2 ;j++ )        			   
			{         				
				if ( i+j>=n+1 && j-i<=n-1)
				{
					if ((i+j)%2==1)
						System.out.print(". ");
					else
					    System.out.print("* ");
				}
				else
				{
					System.out.print("  ");						
				}
												           
			}
			System.out.println();
		}
	}
}