package PatternNumber;
/*  

* * * * * * * * *   n*2-1;
* * * *   * * * *   1,5  =6
* * *       * * *   2,4  2,6
* *           * *   3,3  3,7
*               *   4,2  4,8
                   
*/


class Star_Grid5
{
	public static void main(String[] args) 
	{
		int n=4;
		
		for (int i=1; i<=n; i++ )
		{												   
			for (int j=1 ; j<=n*2-1 ;j++ )        			   
			{         				
				if (i+j>=n+1 || j-i>=n+1)
                System.out.print("* ");
				else
				System.out.print("  ");									           
			}
			System.out.println();
		}
	}
}

